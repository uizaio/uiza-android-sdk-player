<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGrey"
    android:orientation="vertical"
    tools:context="testlibuiza.sample.MainActivity">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:background="@color/White"
                android:orientation="vertical"
                android:padding="@dimen/padding_5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="API V2 (Deprecated)"
                    android:textSize="@dimen/txt_30" />

                <Button
                    android:id="@+id/bt_test_api_v2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test API V2" />

                <Button
                    android:id="@+id/bt_uiza_video_cannot_slide_v2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uiza Video Cannot Slide" />

                <Button
                    android:id="@+id/bt_uiza_video_slide_v2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uiza Video Slide" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:background="@color/White"
                android:orientation="vertical"
                android:padding="@dimen/padding_5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="API V3 (Recommended)"
                    android:textSize="@dimen/txt_30" />

                <Button
                    android:id="@+id/bt_test_api_v3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test API V3" />

                <Button
                    android:id="@+id/bt_sdk_v3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Green"
                    android:padding="@dimen/padding_5"
                    android:text="Test UizaSDK V3" />

                <Button
                    android:id="@+id/bt_uiza_demo_ui_slide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:text="Uiza Video Slide UI"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
