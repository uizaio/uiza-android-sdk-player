<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    android:orientation="vertical">

    <io.uiza.player.UzPlayer
        android:id="@id/uiza_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_progress_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_5"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/txt_8" />

                <TextView
                    android:id="@+id/tv_progress_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_5"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/txt_8" />

                <TextView
                    android:id="@+id/tv_state_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_5"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/txt_8" />

                <TextView
                    android:id="@+id/tv_buffer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_5"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/txt_8" />

                <TextView
                    android:id="@+id/tv_click_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_5"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/txt_8" />

                <TextView
                    android:id="@+id/tv_screen_rotate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_5"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/txt_8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="play" />

                <Button
                    android:id="@+id/bt_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pause" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_next_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="next 10s" />

                <Button
                    android:id="@+id/bt_prev_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pre 10s" />

                <Button
                    android:id="@+id/bt_volume_on_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="volume toggle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_cc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cc" />

                <Button
                    android:id="@+id/bt_hq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hq" />

                <Button
                    android:id="@+id/bt_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_toggle_fullscreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fullscreen toggle" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_stats_for_nerds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="StatsForNerds toggle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_next_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="next video" />

                <Button
                    android:id="@+id/bt_prev_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="prev video" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:text="@string/large_text" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
