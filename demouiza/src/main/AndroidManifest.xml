<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.uiza.demo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:name="com.uiza.demo.LSApplication"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <!--support 18:9-->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1"/>

        <activity android:name="com.uiza.demo.option.OptionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.uiza.demo.v4.SplashActivity"/>
        <activity
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:name="com.uiza.demo.v4.HomeV4CanSlideActivity"
            android:windowSoftInputMode="adjustNothing"/>
        <activity
            android:name="com.uiza.demo.v4.live.broadcast.MenuActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name="com.uiza.demo.v4.live.broadcast.LivePortraitActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.uiza.demo.v4.live.broadcast.LiveLandscapeActivity"
            android:screenOrientation="landscape"
            />
    </application>
</manifest>